    <div class="row" style="margin-top:15px">
        <div class="col-md-6">
            <div class="form-group">                
                <a asp-action="StaffsperPatientEdit" asp-route-PatientId="@ViewBag.Idpatient" asp-route-Id="@ViewBag.Id" class="btn btn-primary">Edit</a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <a asp-action="StaffsperpatientList" asp-route-PatientId="@ViewBag.Idpatient" class="btn btn-secondary btn-block col-md-4">Back to List</a>
            </div>
        </div>
